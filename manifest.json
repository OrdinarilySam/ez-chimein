{

  "manifest_version": 2,
  "name": "EZ Chime In",
  "version": "2.4",

  "description": "Makes chime in very easy",

  "permissions": [
    "webRequest", "webRequestBlocking", "webRequestFilterResponse", "*://chimein2.cla.umn.edu/chime*"
  ],

  "icons": {
    "48": "icons/logo48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://chimein2.cla.umn.edu/chime*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "chimein@dadahasa.com",
      "strict_min_version": "100.0"
    }
  }


}